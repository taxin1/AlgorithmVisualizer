<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Lighting?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.algorithmvisualizer.AlgorithmVisualizerMenuController">
    <StackPane fx:id="mainStackPane">
        <VBox alignment="CENTER_RIGHT" prefHeight="369.0" prefWidth="441.0" spacing="10">
            <Button onAction="#handleSortingButtonClick" prefHeight="25.0" prefWidth="130.0"
                    text="Sorting Algorithms">
                <effect>
                    <Lighting diffuseConstant="2.0" light="$null" specularConstant="0.0" specularExponent="40.0"
                              surfaceScale="0.01">
                        <bumpInput>
                            <Shadow blurType="GAUSSIAN"/>
                        </bumpInput>
                    </Lighting>
                </effect>
            </Button>
            <Button onAction="#handleSearchingButtonClick" prefHeight="25.0" prefWidth="130.0"
                    text="Searching Algorithms">
                <effect>
                    <Lighting diffuseConstant="2.0" light="$null" specularConstant="0.0" specularExponent="40.0"
                              surfaceScale="0.01">
                        <bumpInput>
                            <Shadow blurType="GAUSSIAN"/>
                        </bumpInput>
                    </Lighting>
                </effect>
            </Button>
            <Button onAction="#handleGraphButtonClick" prefHeight="25.0" prefWidth="130.0" text="Graph Algorithms">
                <effect>
                    <Lighting diffuseConstant="2.0" light="$null" specularConstant="0.0" specularExponent="40.0"
                              surfaceScale="0.01">
                        <bumpInput>
                            <Shadow blurType="GAUSSIAN"/>
                        </bumpInput>
                    </Lighting>
                </effect>
            </Button>
        </VBox>
    </StackPane>
</AnchorPane>
